{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-plugin-prettier",
    "tslint-angular",
    "tslint-etc"
  ],
  "rules": {
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "object-literal-sort-keys": false,
    "no-empty": false,
    "await-promise": true,
    "no-floating-promises": true,
    "strict-type-predicates": true,
    "strict-boolean-expressions": [true, "ignore-rhs"]
  }
}
